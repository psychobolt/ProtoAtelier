{
  "presets": [
    ["env", { 
      "modules": false,
      "targets": {
        "node": "current",
        "uglify": true
      },
      "useBuiltIns": true
    }], 
    "stage-0", 
    "flow",
    "react"
  ],
  "plugins": [
    "transform-decorators-legacy",
    ["transform-runtime", { "polyfill": false }],
    ["babel-plugin-transform-builtin-classes", {
      "globals": ["HTMLElement"]
    }],
    ["module-resolver", { 
      "root": ["./src"],
      "cwd": "./"
    }],
    "react-hot-loader/babel"
  ],
  "env": {
    "commonjs": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}