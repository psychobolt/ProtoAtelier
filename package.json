{
  "name": "electron-boilerplate",
  "version": "0.0.1",
  "description": "A minimalistic Electron boilerplate based on the official first-app tutorial. Enhanced with webpack support.",
  "main": "src/.build/main.bundle.js",
  "scripts": {
    "postinstall": "rimraf flow-typed/npm && npm run flow-typed-install:dev && npm run flow-typed-install:app && electron-builder install-app-deps",
    "flow-typed-install:dev": "flow-typed install -s -o",
    "flow-typed-install:app": "cd src/ && flow-typed install -s -o --packageDir ../ || true",
    "build.app:prod": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack --config webpack.app.babel.js",
    "build.main:dev": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack --config webpack.main.babel.js",
    "build:prod": "npm run build.app:prod && cross-env BABEL_ENV=commonjs NODE_ENV=production webpack --config webpack.main.babel.js",
    "build:dist": "electron-builder",
    "build": "npm run build:prod && npm run build:dist",
    "start": "npm run dev",
    "dev": "npm run build.main:dev && cross-env NODE_ENV=development electron .",
    "prod": "npm run build:prod && electron .",
    "watch": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack-dev-server --config webpack.app.babel.js",
    "test": "jest",
    "test-e2e": "ava",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:js": "eslint src e2e *.js"
  },
  "build": {
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "app": "src"
    }
  },
  "ava": {
    "files": [
      "e2e/**/*.js",
      "!src/**/*"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/(main|menu).js",
      "!**/.build/**",
      "!src/**/index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.mock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/style.mock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psychobolt/electron-boilerplate.git"
  },
  "author": "psychobolt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psychobolt/electron-boilerplate/issues"
  },
  "homepage": "https://github.com/psychobolt/electron-boilerplate#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.4.4",
    "ava": "^1.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-dynamic-import-node-sync": "^2.0.1",
    "cash-true": "^0.0.2",
    "clean-webpack-plugin": "^2.0.1",
    "codecov": "^3.3.0",
    "core-js": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^2.1.1",
    "electron": "~5.0.0",
    "electron-builder": "^20.39.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "file-loader": "^3.0.1",
    "flow-bin": "0.97.0",
    "flow-typed": "2.5.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.7.1",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4"
  }
}
