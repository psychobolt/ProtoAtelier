{
  "name": "electron-boilerplate",
  "version": "1.0.0",
  "description": "Personal Electron boilerplate",
  "main": "src/.build/main.bundle.js",
  "scripts": {
    "postinstall": "rimraf flow-typed/npm && npm run flow-typed-install:dev && npm run flow-typed-install:app && electron-builder install-app-deps",
    "flow-typed-install:dev": "flow-typed install -s -o",
    "flow-typed-install:app": "cd src/ && flow-typed install -s -o --packageDir ../ || true",
    "build.app:prod": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack --config webpack.app.babel.js",
    "build.main:dev": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack --config webpack.main.babel.js",
    "build:prod": "npm run build.app:prod && cross-env BABEL_ENV=commonjs NODE_ENV=production webpack --config webpack.main.babel.js",
    "build:dist": "electron-builder",
    "build": "npm run build:prod && npm run build:dist",
    "start": "npm run dev",
    "dev": "npm run build.main:dev && cross-env NODE_ENV=development electron .",
    "prod": "npm run build:prod && electron .",
    "watch": "cross-env BABEL_ENV=commonjs NODE_ENV=development babel-node server",
    "test": "cross-env BABEL_ENV=commonjs jest",
    "test-e2e": "ava",
    "lint": "eslint src e2e *.js"
  },
  "build": {
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "app": "src"
    }
  },
  "ava": {
    "files": [
      "e2e/**/*.js",
      "!src/**/*"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/(main|menu).js",
      "!**/.build/**",
      "!src/**/index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.mock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/style.mock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psychobolt/electron-boilerplate.git"
  },
  "author": "psychobolt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psychobolt/electron-boilerplate/issues"
  },
  "homepage": "https://github.com/psychobolt/electron-boilerplate#readme",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "cash-true": "^0.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.4",
    "css-hot-loader": "^1.3.8",
    "css-loader": "^0.28.11",
    "electron": "~1.8.4",
    "electron-builder": "^20.6.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.68.0",
    "flow-typed": "2.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.1.0",
    "jest": "^22.4.3",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.20.3",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {}
}
