{
  "name": "electron-boilerplate",
  "version": "1.0.0",
  "description": "Personal Electron boilerplate",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "cross-env NODE_ENV=production electron-builder",
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development electron .",
    "prod": "cross-env NODE_ENV=production electron .",
    "test": "jest",
    "test-e2e": "ava",
    "lint": "eslint e2e *.js"
  },
  "build": {
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psychobolt/electron-boilerplate.git"
  },
  "author": "psychobolt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psychobolt/electron-boilerplate/issues"
  },
  "homepage": "https://github.com/psychobolt/electron-boilerplate#readme",
  "devDependencies": {
    "ava": "^0.21.0",
    "cross-env": "^5.0.4",
    "electron": "^1.6.11",
    "electron-builder": "^19.19.1",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^20.0.4",
    "spectron": "^3.7.2"
  }
}
